{
    "__version": "2.3.0",
    "__comments": "Sample template to deploy a vCenter Server Appliance with an embedded Platform Services Controller on a vCenter Server instance.",
    "new.vcsa": {
        "esxi": {
            "hostname": "ESXI_HOSTIP",
            "username": "root",
            "password": "PASSWORD",
            "deployment.network": "VM Network",
            "datastore": "VMware_vcsa"
        },
        "appliance": {
            "thin.disk.mode": true,
            "deployment.option": "tiny",
            "name": "vcsa65.ntnxlab.local"
        },
        "network": {
            "ip.family": "ipv4",
            "mode": "static",
            "ip": "VCSA_IP",
            "dns.servers": [
                "DNSSERVERS"
            ],
            "prefix": "25",
            "gateway": "VCSA_GW",
            "system.name": "VCSA_IP"
        },
        "os": {
            "password": "OS_PASSWORD",
            "ssh.enable": true
        },
        "sso": {
            "password": "SSO_PASSWORD",
            "domain-name": "vsphere.local"
        }
    },
    "ceip": {
        "settings": {
            "ceip.enabled": false
        }
    }
}
